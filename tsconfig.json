{
  "compilerOptions": {
    "module": "amd",
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "build/resources/main/static/scripts/bundle.js",
    "sourceMap": false,
    "lib": ["es2015", "es2017", "dom"]
  },
  "include": [
    "src/main/resources/static/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
